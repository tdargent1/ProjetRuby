<%= form_with(model: post) do |form| %>

<% if post.errors.any? %>
<div>
  <h2>There is <%= pluralize(post.errors.count, "error") %></h2>
  <ul>
    <% post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div>
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div>
  <%= form.label :content %>
  <%= form.text_field :content %>
</div>

<div>
  <%= form.label :status %>
  <%= form.select :status, [ ['Brouillon', false], ["Public", true] ], selected: post.status ? post.status : false %>
</div>

<div>
  <%= form.label :category_ids %>
  <%= form.collection_check_boxes(:category_ids, @categories, :id, :name) %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>
