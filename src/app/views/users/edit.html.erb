<div class='col-md-12'>
    <div class='panel.panel-default'>
        <div class='panel-heading'>
            <h5><%= @user.name %></h5>
        </div>
    </div>
    
    <% if current_user != @user %>
        <% if current_user.has_role?(:admin) %>
            <% if @user.has_role?(:admin) %>
                <%= link_to  t('user.retrieve_admin'), retrieve_admin_user_path(@user, :admin => false), class: "btn btn-outline-info float-right float-top margin-left", method: :put %>
            <% else %>
                <%= link_to  t('user.give_admin'), give_admin_user_path(@user, :admin => true), class: "btn btn-info float-right float-top margin-left", method: :put %>
            <% end %>
        <% end %>
        <% if !current_user.followings.include?(@user) %>
            <%= link_to  t('user.follow'), follow_user_path(@user, :follower_id => current_user.id), class: "btn btn-info float-right float-top btn-follow", method: :put %>
        <% elsif user_signed_in? %>
            <%= link_to  t('user.unfollow'), unfollow_user_path(@user, :follower_id => current_user.id), class: "btn btn-outline-info float-right float-top btn-follow", method: :put %>
        <% end %>
    <% end %>

    <div class='panel-body'>
        <%= render :partial => 'form' %>
    </div>
</div>