<div class="tab-pane" id="user_form">
    <h4 class="col-sm-12"><%= t('user.video_library') %></h4>

    <ul class="nav nav-tabs" id="user-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="films-tab" data-toggle="tab" href="#mes-films" role="tab" aria-controls="mes-films" aria-selected="true"><%= t('user.my_films') %></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="actions-tab" data-toggle="tab" href="#mes-actions" role="tab" aria-controls="mes-actions" aria-selected="false"><%= t('user.my_actions') %></a>
    </li>
    <% if current_user && current_user == @user && !@user.followings.empty? %>
        <li class="nav-item">
            <a class="nav-link" id="actions-tab" data-toggle="tab" href="#mes-abo" role="tab" aria-controls="mes-abo" aria-selected="false"><%= t('user.my_subscriptions') %></a>
        </li>
    <% end %>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="mes-films" role="tabpanel" aria-labelledby="films-tab">
            <div class="tab-pane" id="mes-films">
                <table class="admin_table table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th><%= t('film.name') %></th>
                            <th><%= t('film.title') %></th>
                            <th><%= t('film.director') %></th>
                            <% if current_user != @user %>
                            <th><%= t('film.loan') %></th>
                            <% end %>
                        </tr>
                    </thead>

                    <tbody>
                        <% @user.films.each do |film| %>
                            <tr>
                            <td><%= link_to film.id, edit_film_path(film.id) %></td>
                            <td><%= film.titre %></td>
                            <td><%= film.realisateur %></td>
                            <% if current_user != @user %>
                            <td><%= link_to  t('film.borrow'), request_film_user_path(@user, :from_user_id => current_user.id, :to_user_id => @user.id, :film_id => film.id), class: "btn btn-info float-right float-top btn-follow", method: :put %></td>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="mes-actions" role="tabpanel" aria-labelledby="actions-tab">
            <div class="tab-pane active" id="mes-actions">
                <% @actions.each do |a| %>
                    <% card = a.card_title(@user.id) %>
                    <div class="card text-white bg-<%=card[:status]%> mb-3">
                        <div class="card-header">#<%= a.id %> <%= a.status_to_text %></div>
                        <div class="card-body">
                            <h5 class="card-title"><%= card[:title] %></h5>
                            <p class="card-text"><i><%= Film.find(a.film_id).titre %></i>, <%= Film.find(a.film_id).realisateur %></p>

                            <% if card[:requested_action] && current_user && current_user == @user && @user.id == a.to_user_id  %>
                                <p><%= link_to t('film.accept'), accept_request_user_path(@user, :user_action_id => a.id), class: "btn btn-success float-right", method: :put %></p>
                                <p><%= link_to t('film.refuse'), refuse_request_user_path(@user, :user_action_id => a.id), class: "btn btn-danger float-right", style: "margin-right: 10px", method: :put %></p>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <% if current_user && current_user == @user && !@user.followings.empty? %>
            <div class="tab-pane fade" id="mes-abo" role="tabpanel" aria-labelledby="actions-tab">
                <div class="tab-pane active" id="mes-abo">
                    <div class="container" >
                        <div class="row">
                            <% @user.followings.each do |f| %> 
                                <% if !f.user_actions.empty? %> 
                                    <div class="col"> 
                                        <h5 id="follower-name"><%= f.name %></h5>
                                        <% f.user_actions.each do |a| %>
                                            <% card = a.card_title(f.id) %>
                                            <div class="card text-white bg-<%=card[:status]%> mb-3">
                                                <div class="card-header">#<%= a.id %> <%= a.status_to_text %></div>
                                                <div class="card-body">
                                                    <h5 class="card-title"><%= card[:title] %></h5>
                                                    <p class="card-text"><i><%= Film.find(a.film_id).titre %></i>, <%= Film.find(a.film_id).realisateur %></p>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

